<VirtualHost *:<%= port %>>
	ServerName <%= server_names.first %>
	<% server_names[1..server_names.size-1].each do |name| %>
	ServerAlias <%= name %>
	<% end %>

	ServerAdmin webmaster@localhost

	<%= vhost_config %>

	ErrorLog ${APACHE_LOG_DIR}/error.log
	CustomLog ${APACHE_LOG_DIR}/access.log combined
</VirtualHost>

