#!/bin/bash

include () {
    [[ -f "$1" ]] && source "$1"
}

include /etc/profile
include $HOME/.profile
include $HOME/.bashrc

cd <%= service["service_root"] %>
<% 1.upto(spawn).each do |idx| 
  log_suffix = spawn > 1 ? "_#{idx}" : ''
%>
<%= service["run_command"] %> > <%= redirect_log_file + log_suffix %> 2>&1 &
<% end %>
